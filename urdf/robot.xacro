<?xml version="1.0"?>
<robot name="vector" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <link name="base_footprint">
      <visual>
          <geometry>
              <box size="0.001 0.001 0.001"/>
          </geometry>
      </visual>
  </link>

  <link name="base_link">
      <visual>
          <origin rpy="0 0 ${pi/2}" xyz="0 0.009 0.001"/>
          <geometry>
              <mesh filename="package://vector_description/meshes/vector.stl" scale="0.001 0.001 0.001"/>
          </geometry>
      </visual>
      <collision>
          <origin rpy="0.0 0 0" xyz="-0.009 0 0.02"/>
          <geometry>
              <box size="0.06 0.025 0.03"/>
          </geometry>
      </collision>
      <inertial>
          <geometry>
              <cylinder length="0.3" radius="0.2"/>
          </geometry>
          <mass value="0.998"/>
          <inertia ixx="0.017465000000000001" ixy="0" ixz="0" iyy="0.017465000000000001" iyz="0" izz="0.019960000000000002"/>
      </inertial>
  </link>
  <joint name="base_footprint_joint" type="fixed">
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <parent link="base_footprint"/>
      <child link="base_link"/>
  </joint>
  <gazebo reference="base_link">
      <selfCollide>true</selfCollide>
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0"/>
      <kd value="1.0"/>
  </gazebo>

  <link name="fork_link">
      <collision>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
              <box size="0.005 0.04 0.002"/>
          </geometry>
      </collision>
  </link>
  <joint name="fork_joint" type="fixed">
      <origin xyz="0.031 0.0 0.005" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="fork_link"/>
  </joint>
  <gazebo reference="fork_link">
      <selfCollide>true</selfCollide>
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0"/>
      <kd value="1.0"/>
  </gazebo>

  <xacro:macro name="wheel" params="link_name pos_x pos_y pos_z">
    <link name="${link_name}">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.008" radius="0.01"/>
            </geometry>
            <material name="black"/>
        </collision>
        <inertial>
            <mass value="0.01"/>
            <inertia ixx="8.3333333333333344e-05" ixy="0" ixz="0" iyy="8.3333333333333344e-05" iyz="0" izz="0.00012500000000000003"/>
        </inertial>
    </link>
    <joint name="${link_name}_joint" type="continuous">
        <parent link="base_link"/>
        <child link="${link_name}"/>
          <origin rpy="${-pi/2} 0 0" xyz="${pos_x} ${pos_y} ${pos_z}"/>
        <axis xyz="0 0 1"/>
    </joint>
    <transmission name="${link_name}_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="${link_name}_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="${link_name}_motor">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>30</mechanicalReduction>
        </actuator>
    </transmission>
  </xacro:macro>

 <xacro:wheel link_name="rear_left_wheel"   pos_x="-0.03"  pos_y=" 0.02" pos_z="0.01"/>
 <xacro:wheel link_name="rear_right_wheel"  pos_x="-0.03"  pos_y="-0.02" pos_z="0.01"/>
 <xacro:wheel link_name="front_right_wheel" pos_x=" 0.015" pos_y="-0.02" pos_z="0.01"/>
 <xacro:wheel link_name="front_left_wheel"  pos_x=" 0.015" pos_y=" 0.02" pos_z="0.01"/>

 <!-- transmission -->

 <gazebo>
     <plugin name="skid_steer_drive_controller" filename="libgazebo_ros_skid_steer_drive.so">
         <updateRate>100.0</updateRate>
         <robotNamespace>/</robotNamespace>

         <leftFrontJoint>front_left_wheel_joint</leftFrontJoint>
         <rightFrontJoint>front_right_wheel_joint</rightFrontJoint>
         <leftRearJoint>rear_left_wheel_joint</leftRearJoint>
         <rightRearJoint>rear_right_wheel_joint</rightRearJoint>

         <wheelSeparation>0.04</wheelSeparation>
         <wheelDiameter>0.02</wheelDiameter>
         <robotBaseFrame>base_footprint</robotBaseFrame>
         <torque>0.1</torque>
         <commandTopic>cmd_vel</commandTopic>
         <odometryTopic>odom</odometryTopic>
         <broadcastTF>true</broadcastTF>
         <odometryFrame>odom</odometryFrame>
         <covariance_x>0.0001</covariance_x>
         <covariance_y>0.0001</covariance_y>
         <covariance_yaw>0.001</covariance_yaw>
     </plugin>
 </gazebo>

<!-- sensors -->

<xacro:include filename="$(find vector_description)/urdf/cliff_sensor.xacro"/>
<xacro:include filename="$(find vector_description)/urdf/imu.xacro"/>
<xacro:include filename="$(find vector_description)/urdf/camera.xacro"/>

</robot>
